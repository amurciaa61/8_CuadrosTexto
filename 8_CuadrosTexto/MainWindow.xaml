<Window x:Class="_8_CuadrosTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_CuadrosTexto"
        mc:Ignorable="d"
        Title="Cuadros de texto"
        Height="400"
        Width="560">
    <Grid>
        <TextBlock HorizontalAlignment="Left"
                   Margin="69,35,0,0"
                   TextWrapping="Wrap"
                   Text="Nombre"
                   VerticalAlignment="Top"
                   Height="25"
                   Width="82" />
        <TextBox x:Name="nombreTextBox"
                 Tag="Nombre"
            HorizontalAlignment="Left"
                 Height="30"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="178"
                 Margin="69,60,0,0" 
                 KeyUp="TextBox_KeyUp"/>
        <TextBlock x:Name="mensajeNombreTextBlock" 
            HorizontalAlignment="Left"
                   Margin="261,64,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Height="30"
                   Width="284" 
                   Foreground="gray"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="69,118,0,0"
                   TextWrapping="Wrap"
                   Text="Apellidos"
                   VerticalAlignment="Top"
                   Height="25"
                   Width="82" />
        <TextBox x:Name="apellidoTextBox"
                 Tag="Apellido"
            HorizontalAlignment="Left"
                 Height="30"
                 Margin="69,144,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="178" 
                 KeyUp="TextBox_KeyUp"/>
        <TextBlock x:Name="mensajeApellidoTextBlock"
            HorizontalAlignment="Left"
                   Margin="261,144,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Height="33"
                   Width="284" 
                   Foreground="gray"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="69,208,0,0"
                   TextWrapping="Wrap"
                   Text="Edad"
                   VerticalAlignment="Top"
                   Height="25"
                   Width="82" />
        <TextBox x:Name="edadTextBox"
            HorizontalAlignment="Left"
                 Height="30"
                 Margin="69,235,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="178" />
        <TextBlock x:Name="mensajeEdadTextBlock"
            HorizontalAlignment="Left"
                   Margin="261,235,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Height="30"
                   Width="284" 
                   Foreground="Red"/>

    </Grid>
</Window>
